<div class="container">
  <%= simple_form_for @post, :html => {:multipart => true} do|f| %>
    <%= f.input :title %>
    <%= f.input :body %>
    <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control" %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
